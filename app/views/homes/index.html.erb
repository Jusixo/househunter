<div class="page-header">
  <%= link_to new_home_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Home
  <% end %>
  <h1 Listing>homes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Bedroom</th>
        <th>Bath</th>
        <th>Square feet</th>
        <th>Price</th>
        <th>Description</th>
        <th>Parking</th>
        <th>Img data</th>
        <th>Roof type</th>
        <th>Lot size</th>
        <th>Hoa</th>
        <th>Hoa fee</th>
        <th>Number of floors</th>
        <th>Year built</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @homes.each do |home| %>
      <tr>
        <td><%= home.address %></td>
        <td><%= home.city %></td>
        <td><%= home.state %></td>
        <td><%= home.zip %></td>
        <td><%= home.bedroom %></td>
        <td><%= home.bath %></td>
        <td><%= home.square_feet %></td>
        <td><%= home.price %></td>
        <td><%= home.description %></td>
        <td><%= home.parking %></td>
        <td><%= home.img_data %></td>
        <td><%= home.roof_type %></td>
        <td><%= home.lot_size %></td>
        <td><%= home.hoa %></td>
        <td><%= home.hoa_fee %></td>
        <td><%= home.number_of_floors %></td>
        <td><%= home.year_built %></td>
        <td>
          <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_home_path(home) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
