<div class="page-header">
  <%= link_to homes_path, class: 'btn btn-default new-home-button' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <% if current_user %>
    <%= link_to edit_home_path(@home), class: 'btn btn-primary new-home-button' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
    <% end %>
    <%= link_to @home, method: :delete, class: 'btn btn-primary new-home-button', data: { confirm: 'Are you sure?' } do %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <% end %>
  <% end %>

  <h1>Listing</h1>
</div>

<dl class="dl-horizontal">
  <dd><%= image_tag (@home.image_url(:small)) %></dd>

  <dt>Address:</dt>
  <dd><%= @home.address %></dd>

  <dt>City:</dt>
  <dd><%= @home.city %></dd>

  <dt>State:</dt>
  <dd><%= @home.state %></dd>

  <dt>Zipcode:</dt>
  <dd><%= @home.zip %></dd>

  <dt>Bedrooms:</dt>
  <dd><%= @home.bedroom %></dd>

  <dt>Bathrooms:</dt>
  <dd><%= @home.bath %></dd>

  <dt>Square feet:</dt>
  <dd><%= @home.square_feet %></dd>

  <dt>Price:</dt>
  <dd><%= @home.price %></dd>

  <dt>Description:</dt>
  <dd><%= @home.description %></dd>

</dl>

<% if Time.now - @home.created_at <= 172800 %>
  <div class="col-md-3 col-md-offset-1 alert-success">
    <h4 class="s-text">Listed <%= time_ago_in_words(@home.created_at) %> ago</h4>
  </div>
<% elsif Time.now - @home.created_at >= 2592000 %>
  <div class="col-md-3 col-md-offset-1 alert-danger">
    <h4 class="s-text">Listed <%= time_ago_in_words(@home.created_at) %> ago</h4>
  </div>
<% else %>
  <div class="col-md-3 col-md-offset-1">
    <h4 class="s-text">Listed <%= time_ago_in_words(@home.created_at) %> ago</h4>
  </div>
<% end %>
