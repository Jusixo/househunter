<li class="list-group-item home-list-group">
  <div class="media home-media">
    <div class="media-left">
      <div>
        <i data-home-id="<%= home.id %>" class='pull-right clickable-heart glyphicon glyphicon-heart <%= home_clicked_class(current_user, home) %>'></i>
        <%= link_to home_path(home) do %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %>
      </div>
      <%= image_tag (home.image_url(:small)) %>
    </div>
    <div class="media-body home-media-body">
      <br />
      <br />
      <br />
      <br />
      <h4 class="media-heading"><%= home.address %></h4>
      <%= home.city %>,
      <%= home.state %>,
      <%= home.description %>,
      Price: <%= home.price %>

    <div class="">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".home-slideshow-<%= home.id %>">View Larger Image</button>

      <div class="modal fade home-slideshow-<%= home.id %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <%= image_tag (home.image_url(:large)) %>
          </div>
        </div>
      </div>
    </div>



      <div class="pull-right">
        <%= link_to home do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        <% end %>
        <% if logged_in? %>
            <%= link_to edit_home_path(home) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
        <% end %>
        <% if logged_in? %>
          <%= link_to home, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</li>
